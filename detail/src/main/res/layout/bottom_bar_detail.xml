<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="16dp"
    tools:ignore="BottomAppBar"
    android:padding="8dp">

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comment"
            android:fontFamily="@font/poppins_semibold"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginStart="20dp"
            android:textColor="@color/neutral_900"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:textColor="@color/neutral_400"
            android:textSize="11sp"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="@+id/tv_comment"
            app:layout_constraintTop_toBottomOf="@id/tv_comment"
            tools:text="110 Komentar"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_see_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/see_comments"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/primary_700"
            app:icon="@drawable/ic_comment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>